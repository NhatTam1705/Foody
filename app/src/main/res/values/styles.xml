<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="colorAndPosition">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="textView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="editTextRegister">
        <item name = "android:paddingLeft">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/input_design</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="buttonRegister">
        <item name = "android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_bg_design</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/register</item>
        <item name="backgroundTint">@color/red_53</item>
        <item name="layout_constraintWidth_percent">0.8</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>